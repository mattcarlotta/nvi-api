[dev]
debug = true
files = ["development.env"]
exec = "fresh"
required = ["API_HOST", "CLIENT_HOST", "COOKIE_KEY", "DB_HOST", "DB_NAME", "DB_PASSWORD", "DB_PORT", "DB_USER", "JWT_SECRET_KEY", "PASSPHRASE", "PORT"]

[migrate]
debug = true
files = ["development.env"]
exec = "go run migrations/migrate.go"
required = ["API_HOST", "CLIENT_HOST", "COOKIE_KEY", "DB_HOST", "DB_NAME", "DB_PASSWORD", "DB_PORT", "DB_USER", "JWT_SECRET_KEY", "PASSPHRASE", "PORT"]

[migrate_test]
debug = true
files = ["test.env"]
exec = "go run migrations/migrate.go"
required = ["API_HOST", "CLIENT_HOST", "COOKIE_KEY", "DB_HOST", "DB_NAME", "DB_PASSWORD", "DB_PORT", "DB_USER", "JWT_SECRET_KEY", "PASSPHRASE", "PORT"]

[test]
debug = false
files = ["test.env"]
exec = "go test ./..."
required = ["API_HOST", "CLIENT_HOST", "COOKIE_KEY", "DB_HOST", "DB_NAME", "DB_PASSWORD", "DB_PORT", "DB_USER", "JWT_SECRET_KEY", "PASSPHRASE", "PORT"]

[test_no_cache]
debug = false
files = ["test.env"]
exec = "go test ./... -count=1"
required = ["API_HOST", "CLIENT_HOST", "COOKIE_KEY", "DB_HOST", "DB_NAME", "DB_PASSWORD", "DB_PORT", "DB_USER", "IN_TESTING", "JWT_SECRET_KEY", "PASSPHRASE", "PORT"]
